    <script>
        document.addEventListener('DOMContentLoaded', function () {
            updateLoginButton();
        });
        function handleLogin() {
            updateLoginButton();
        }

        function handleLogout() {
            localStorage.clear();
            window.location.href = "/Home/Home";
        }
        function updateLoginButton() {
            var token = localStorage.getItem('token');
            var profileLink = document.getElementById("profileLink");
            var loginBtn = document.getElementById("loginBtn");

            if (token != null) {
                profileLink.style.display = "block";
                loginBtn.textContent = "Logout";
                loginBtn.href = "/Home/Home";
                loginBtn.onclick = handleLogout;
            } else {
                profileLink.style.display = "none";
                loginBtn.textContent = "Login";
                loginBtn.href = "/Home/Login";
            }
        }


        // Kiểm tra trạng thái đăng nhập khi bấm vào đặt lịch
        function redirectToBookingPage() {
            var token = localStorage.getItem('token');
            console.log(token);
            if (token) {
                // Nếu token tồn tại, chuyển hướng đến trang đặt lịch
                window.location.href = '/Appointment/Appointment';
            } else {
                // Nếu không, chuyển hướng đến trang đăng nhập
                window.location.href = '/Home/Login';
            }
        }
    </script>
